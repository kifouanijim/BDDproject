{% extends 'base.html.twig' %}

{% block title %}Resource index{% endblock %}

{% block body %}
    <h1>Resource index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Url</th>
                <th>CreatedAt</th>
                <th>actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for resource in resources %}
            <tr>
                <td>{{ resource.id }}</td>
                <td>{{ resource.title }}</td>
                <td>{{ resource.description }}</td>
                <td>{{ resource.url }}</td>
                <td>{{ resource.createdAt ? resource.createdAt|date('Y-m-d H:i:s') : '' }}</td>
               


                <td>
                    <a href="{{ path('app_resource_show', {'id': resource.id}) }}">show</a>
                    <a href="{{ path('app_resource_edit', {'id': resource.id}) }}">edit</a>
                    <a href="{{ path('comment_form', {'id': resource.id}) }}">Ajouter un commentaire</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">pas de resource trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_resource_new') }}">Create new</a>

    <a href="{{ path('forum_index') }}">Forum</a>
    
{% endblock %}
